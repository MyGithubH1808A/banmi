<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_335"
    android:layout_height="450dp">

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#ffffff"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dp_5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp_335"
                android:layout_height="@dimen/dp_413"
                android:id="@+id/iv_home"/>

            <RelativeLayout
                android:layout_width="@dimen/dp_335"
                android:layout_height="@dimen/dp_116"
                android:background="@color/c_99ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_27"
                    android:id="@+id/tv_two"
                    android:maxLength="6"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_26"
                    android:textColor="@color/c_373737"/>

                <ImageView
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:src="@mipmap/location"
                    android:id="@+id/img_location"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_below="@id/tv_two"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/city"
                    android:textColor="@color/c_999"
                    android:textSize="@dimen/sp_14"
                    android:layout_toRightOf="@id/img_location"
                    android:layout_below="@+id/tv_two"
                    android:layout_marginLeft="@dimen/dp_8"
                    />

                <Button
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:background="@drawable/btn_fa6a13_de"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_34"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15"
                    android:text="￥1.9"
                    android:id="@+id/btn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_636363"
                    android:textSize="@dimen/dp_18"
                    android:id="@+id/tv_one"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_below="@id/city"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_636363"
                    android:layout_below="@id/btn"
                    android:id="@+id/purchasedTime" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/c_636363"
                    android:layout_below="@id/btn"
                    android:id="@+id/purchasedTimes"
                    android:text="感兴趣"/>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>